<%- include ../layouts/cabecera.ejs %>
<div class="card">
    <div class="card-header">
        Formulario de captura de libros
    </div>
    <div class="card-body">
        <h5 class="card-title">Datos del libro</h5>
        <p class="card-text">
            <form method="post" action="/libros" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="my-input">Nombre:</label>
                    <input id="my-input" class="form-control" type="text" name="nombre">
                </div>
            
                <div class="form-group">
                    <label >
                    
                        <div class="btn btn-secondary">Selecciona Imagen</div>
                       
                     <input id="my-input" class="form-control" type="file" name="imagen" hidden>
                        
                    </label>
                    
                </div>
                
                <button class="btn btn-success" type="submit">Guardar</button>

                <a class="btn btn-primary" href="/libros">cancelar</a>
            </form>
        </p>
       
    </div>
</div>


